.topPage
  .listWrapper
    - @lists.each do |list|
      .list
        .list_header
          %h2.list_header_title= list.title
          .list_header_action
            = link_to(content_tag(:i, '', class: 'fas fa-trash'), list, method: :delete, data: { confirm: "#{list.title}を削除しますか？" })
            = link_to(content_tag(:i, '', class: 'fas fa-pen'), edit_list_path(list))
